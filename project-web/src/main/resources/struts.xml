<struts>
    <!--the encoding of the  request parameter  -->
    <constant name="struts.i18n.encoding" value="UTF-8"/>
    <!-- the handling of Suffix Type -->
    <constant name="struts.action.extension" value="action,do,go"/>
    <!-- when change the struts.xml , if need to reload the xml default value is false (Production environment) its better set to true when Development phase -->
    <constant name="struts.configuration.xml.reload" value="true"/>
    <!-- if use struts Development mode -->
    <constant name="struts.devMode" value="false"/>
    <!-- if Caching static content , default value is true (Production environment) ,its better set to false when development phase-->
    <constant name="struts.serve.static.browserCache" value="false"/>
    <!-- make the spring container create action class   （or add the dependency struts2-convention-plugin）
    <constant name="struts.objectFactory" value="spring" />
    -->
    <!-- if open dynamic method in vocation-->
    <constant name="struts.enable.DynamicMethodInvocation" value="true"/>
</struts>